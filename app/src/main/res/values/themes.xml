<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Encrypt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_dark_background</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="background">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>

        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onBackground</item>

        <item name="colorOnContainer">@color/md_theme_dark_onBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onBackground</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor">@color/md_theme_dark_background</item>
        <item name="android:navigationBarColor">@color/md_theme_dark_background</item>
        <item name="android:itemBackground">@color/md_theme_dark_background</item>
        <item name="panelBackground">@color/md_theme_dark_background</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/musticapro_semibold</item>
    </style>


</resources>